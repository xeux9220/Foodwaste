@page "/payment"
@inject NavigationManager NavigationManager

<link href="StyleSheet.css" rel="Payment.css" />

<html>
<head>
</head>
<body>
    <div class="container">
        <form action="">
            <div class=" row">
                <div class=" col">
                    <h3 class=" title"> Billing address</h3>
                    <div class=" inputbox ">
                        <span> Full Name: </span>
                        <input type="text" placeholder="Jane Doe">
                    </div>
                    <div class=" inputbox ">
                        <span> Email: </span>
                        <input type="Email" placeholder="Example@gmail.com">
                    </div>
                    <div class=" inputbox ">
                        <span> Address: </span>
                        <input type="text" placeholder=" Room - Street - Locality">
                    </div>
                    <div class=" inputbox ">
                        <span> City: </span>
                        <input type="text" placeholder="Aalborg">
                    </div>
                    <div class=" inputbox ">
                        <span> State: </span>
                        <input type="text" placeholder="Nordjylland">
                    </div>
                    <div class=" inputbox ">
                        <span> Zip code: </span>
                        <input type="text" placeholder="9990">
                    </div>
                </div>
                <div class=" col">
                    <h3 class=" title"> Payment</h3>
                    <div class=" inputbox ">
                        <span> Cards Accepted: </span>
                        <img src="images/Cards.png" alt="" style="height: auto; width: 100%; margin-top: -5.8%; margin-bottom: -6%;" />
                    </div>
                    <div class=" inputbox ">
                        <span> Name on Card: </span>
                        <input type="text" placeholder="Jane Doe">
                    </div>
                    <div class=" inputbox ">
                        <span> Credit Card Number: </span>
                        <input type="Number" placeholder="1234-4321-1234-4321">
                    </div>
                    <div class=" inputbox ">
                        <span> Expiring Month: </span>
                        <input type="number" placeholder=" January">
                    </div>
                    <div class=" inputbox ">
                        <span> Expiring Year: </span>
                        <input type="number" placeholder="2022">
                    </div>
                    <div class=" inputbox ">
                        <span> CVV: </span>
                        <input type="number" placeholder="123">
                    </div>
                </div>
            </div>
            <input type="submit" value="Proceed to Checkout" class="submit-btn" @onclick="NavToCounter" />
        </form>
    </div>
</body>
</html>


@code {
    private void NavToCounter()
    {
        NavigationManager.NavigateTo("Counter");
    }

    }

